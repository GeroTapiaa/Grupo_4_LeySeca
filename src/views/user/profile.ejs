<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title : 'Perfil' }) %>

  <body class="body__register">
    <%- include( '../partials/navbar') %>

    <main class="main__profile">
      <div class="main__profile-section">
        <h2 class="form__title-profile">Tu perfil</h2>
        <div class="form__register-container-profile">
          <div class="form__register-photo">
            <figure class="image_profile">
              <img src="/images/users/<%=user.avatar%>" />
            </figure>
          </div>

          <div class="form_profile"><%= user.name %></div>
          <div class="form_profile">
            <p><%= user.user %></p>
          </div>
          <div class="form__register-date">
            <p>Fecha de nacimiento:</p>
            <p><%= user.date %></p>
          </div>
          <div class="form_profile">
            <p><%= user.address %></p>
          </div>
          <div class="form_profile">
            <p><%= user.email %></p>
          </div>

          <div class="form__register-button">
            <a href="/users/profileEdit/<%= user.id %> ">
              <button class="button">Editar Perfil</button></a
            >

            <input type="reset" class="button" value="Eliminar Perfil" />
          </div>
        </div>

        <%- include( '../partials/footer') %>
      </div>
    </main>
  </body>
</html>
